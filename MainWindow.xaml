<Window x:Class="ShutdownApp.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Shutdown App" Height="170" Width="200"
Background="#333"
WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="countdownText" FontSize="28" HorizontalAlignment="Center" Margin="0,20,0,0" Padding="0,0,0,0"
                       Foreground="White"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="add5MinButton" Content="+5" Width="50" Click="add5MinButton_Click" Margin="0,5,0,5"
Background="#999" HorizontalAlignment="Right" Padding="5"/>
                <Button x:Name="stopShutdownButton" Content="Pause" Width="70" Click="stopShutdownButton_Click" Padding="5" Margin="20,5,0,5"
        Background="#999" HorizontalAlignment="Left"/>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>